#!/bin/sh
basedir=`dirname "$0"`
path=`readlink -f "$0"`
basepath=`dirname $path`

which bunyan
OUT=$?

if [ $OUT -eq 0 ];then
  NODE_PATH=$basepath/../lib node --experimental-worker --expose-gc "$basepath/../framework.js" "$@" | bunyan
else
  NODE_PATH=$basepath/../lib node --experimental-worker --expose-gc "$basepath/../framework.js" "$@"
fi
